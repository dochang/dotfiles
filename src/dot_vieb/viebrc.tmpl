{{- /* -*- mode: web; -*- */ -}}
{{- $mapList := list "cmap" "emap" "smap" -}}
" Options
set adblocker=update
set darkreader
set guifontsize=18

" Mappings
nmap <Space> <scrollPageDown>
nmap <S-Space> <scrollPageUp>
nmap <BS> <scrollPageUp>
{{- range $map := $mapList }}

{{ $map }} <C-b> <Left>
{{ $map }} <C-S-b> <S-Left>
{{ $map }} <C-f> <Right>
{{ $map }} <C-S-f> <S-Right>

{{ $map }} <A-b> <C-Left>
{{ $map }} <A-S-b> <C-S-Left>
{{ $map }} <A-f> <C-Right>
{{ $map }} <A-S-f> <C-S-Right>

{{ $map }} <C-a> <Home>
{{ $map }} <C-S-a> <S-Home>
{{ $map }} <C-e> <End>
{{ $map }} <C-S-e> <S-End>

{{ $map }} <C-w> <C-x>
{{ $map }} <A-w> <C-c>
{{ $map }} <C-y> <C-v>

{{ $map }} <C-d> <Del>
{{ $map }} <A-d> <C-Del>
{{ $map }} <C-k> <S-End><BS>

{{ $map }} <C-/> <Home><S-End>
{{ $map }} <A-BS> <C-BS>
{{- end }}

