[color]
	ui = auto
	pager = true
	# Set it to true or false based on your value of `core.pager`.
	#
	# For less (the default pager), true is ok.
	#
	# For other pagers, set it to false if the pager can not parse ANSI
	# color codes.

[rebase]
	autosquash = true
	stat = true
	rebaseMerges = rebase-cousins
	updateRefs = true
	missingCommitsCheck = error

[core]
	pager = delta
	preloadIndex = true

[credential]
	helper = cache --timeout=3600

[alias]
	ignore-for = "!gi() { a=$(IFS=, eval 'echo \"$*\"') ; api=\"curl -sSL http://www.gitignore.io/api/$a\" ; case \"$a\" in list) api=\"$api | tr , '\\\\n'\" ;; esac ; eval \"$api | $(git config core.pager)\" ; } ; gi"
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ; printf '\n' ;}; gi"

[diff "spaceman-diff"]
	command = spaceman-diff

[ghq]
	## https://github.com/x-motemen/ghq#configuration
	root = ~/src

[merge]
	conflictStyle = zdiff3

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	line-numbers = true
	side-by-side = true
	detect-dark-light = auto

[diff]
	external = difft
	renames = copies

[commit]
	verbose = 2

[status]
	showStash = true

[apply]
	whitespace = warn

[push]
	followTags = true

[branch]
	sort = -committerdate

[tag]
	sort = -taggerdate

[init]
	defaultBranch = main

[include]
	path = vars
	path = config_local
